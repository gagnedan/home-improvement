<p id="notice"><%= notice %></p>

<h1>Comments</h1>
<table>
  <thead>
    <tr>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.body %></td>
        <td><%= link_to 'Show', project_comments_path %></td>
        <td><%= link_to 'Edit',edit_project_comment_path(@comment.id) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

