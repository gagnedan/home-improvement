<p id="notice"><%= notice %></p>

<h1>Comments</h1>


<table class="table table-bordered push-10-t">
<thead>
  <tr>
    <th>Project</th>
    <th>Commentaire</th>
    <th colspan="2">Action</th>
  </tr>
</thead>
<tbody>
  <% @comments.each do |comment| %>
  <tr>
    <td><%= comment.project.name%>
    <td><%= comment.body %></td>
    <td><%= link_to "Edit", edit_admin_comment_path(comment) %></td>
    <td><%= link_to 'Destroy', admin_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>
</tbody>
</table>
