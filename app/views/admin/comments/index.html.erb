<div class="block block-bordered block-rounded">
  <div class="block-header">
    <h3 class="block-title">Comments</h2>
  </div>
  <div class="block-content">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Project</th>
          <th style="width: 60%;">Comment</th>
          <th>User</th>
          <th style="width: 100px;" class="text-center"><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.project.name%>
          <td><%= comment.body %></td>
          <td><%= comment.user.fullname %></td>
          <td class="text-center">
            <span class="pull-left">
            <%= link_to t('.edit'), edit_admin_comment_path(comment) %>
            </span>
            <span class="pull-right">
            <%= link_to t('.destroy'), admin_comment_path(comment), method: :delete, data: { confirm: t('.confirm') } %>
            </span>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
